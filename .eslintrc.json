{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": "off",
        "require-jsdoc": "off",
        "object-curly-spacing": [ "error", "always"],
        "arrow-spacing": ["error", "always"],
        "new-cap": "off",
        "comma-dangle": "off",
        "array-bracket-spacing": "off",
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "no-invalid-this": "off"
    }
}